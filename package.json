{
  "name": "diff-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action that compares two files, add tolerances, send notifications, etc",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint '**/*.js' '**/*.ts'",
    "pack": "ncc build -m",
    "test": "jest",
    "format": "prettier --write '**/*.js' '**/*.ts'",
    "all": "npm run build && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisBrunner/diff-action.git"
  },
  "keywords": [
    "github",
    "actions",
    "diff"
  ],
  "author": "Louis Brunner",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.6",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
